<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>/home/work/var/log/demo-logging/test.log</file>
		<encoder>
			<pattern>%date [%thread] %level %logger - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="info">
		<appender-ref ref="FILE" />
	</root>
</configuration>
